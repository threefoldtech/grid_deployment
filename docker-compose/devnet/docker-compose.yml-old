version: "3.7"

networks:
  tfgrid_bknd:
    name: tfgrid_bknd
    enable_ipv6: true
    driver_opts:
        com.docker.network.enable_ipv6: "true"
    ipam:
      driver: default
      config:
        - subnet: "172.28.0.0/24"
        - subnet: "2001:db8:1::/64"

services:
## TFchain public node
  tfchain-public-node:
    container_name: tfchain-dev-public-node
    volumes:
      - /srv/tfchain/:/storage/
    image: threefolddev/tfchain:2.2.0-rc8
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.2
    ports:
#      - "9944:9944"
#      - "9933:9933"
#      - "9615:9615"
      - "30333:30333"
    command:
      - "--node-key"
      - "baad0200d185d1ec4434b197f78a1bcb74aa9d8ee9c591c55390ea910b505f8b"
      - "--base-path"
      - "/storage"
      - "--chain"
      - "/etc/chainspecs/dev/chainSpecRaw.json"
      - "--port"
      - "30333"
      - "--bootnodes"
      - "/ip4/185.206.122.7/tcp/30333/ws/p2p/12D3KooWRdfuKqX8hULMZz521gdqZB2TXJjfrJE5FV71WiuAUrpk"
      - "--rpc-cors"
      - "all"
      - "--prometheus-external"
      - "--ws-external"
      - "--ws-max-connections=148576"
      - "--pruning"
      - "archive"
      - "--telemetry-url"
      - "wss://shard1.telemetry.tfchain.grid.tf/submit 1"
      - "--rpc-methods=Safe"
      - "--rpc-external"

## Graphql - Indexer
  indexer_db:
    depends_on:
      - tfchain-public-node
    container_name: indexer_db
    image: cockroachdb/cockroach:v22.2.2
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.3
#    ports:
#      - "26257:26257"
#      - "8080:8080"
    command: start-single-node --insecure
    volumes:
      - /srv/indexer/:/cockroach/cockroach-data

  indexer_ingest:
    depends_on:
      - indexer_db
    container_name: indexer_ingest
    image: subsquid/substrate-ingest:1
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.4
    volumes:
      - "./typesBundle.json:/configs/typesBundle.json"
    command:
      [
        "-e",
        "${WS_ENDPOINT}",
        "-c",
        "20",
        "--out",
        "postgres://root@indexer_db:26257/defaultdb",
        "--types-bundle",
        "/configs/typesBundle.json"
      ]

  indexer_gateway:
    depends_on:
      - indexer_ingest
    image: subsquid/substrate-gateway:2.5.0
    container_name: indexer_gateway
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.5
#    ports:
#      - "8888:8000"
    environment:
      DATABASE_MAX_CONNECTIONS: 5
      RUST_LOG: "actix_web=info,actix_server=info"
    command: [ "--database-url", "postgres://root@indexer_db:26257/defaultdb" ]

  indexer_explorer:
    depends_on:
      - indexer_gateway
    container_name: indexer_explorer
    image: subsquid/substrate-explorer:firesquid
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.6
#    ports:
#      - "4444:3000"
    environment:
      DB_TYPE: cockroach
      DB_HOST: indexer_db
      DB_PORT: "26257"
      DB_NAME: "defaultdb"
      DB_USER: "root"

## Graphql - Processor
  processor_db:
    depends_on:
      - indexer_explorer
    container_name: processor_db
    image: postgres:14
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.7
#    ports:
#      - "5432:5432"
    volumes:
      - /srv/processor/:/var/lib/postgresql/data
    environment:
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASS}
      POSTGRES_DB: ${DB_NAME}

  processor:
    depends_on:
      - processor_db
    container_name: processor
    image: ghcr.io/threefoldtech/tfchain_graphql_processor:2.9.2
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.8
#    ports:
#      - 44233:44233
#    build:
#      dockerfile: Dockerfile
#      context: ./
    env_file:
      - .env
    environment:
      - INDEXER_ENDPOINT_URL=${INDEXER_ENDPOINT_URL}
      - WS_URL=${WS_URL}
      - DB_HOST=processor_db
      - POLL_INTERVAL_MS=300
      - TYPEORM_LOGGING=error
    command: ["yarn", "process"]

  processor_query-node:
    depends_on:
      - processor
    container_name: processor_query_node
    image: ghcr.io/threefoldtech/tfchain_graphql_query-node:2.9.2
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.9
#    ports:
#      - 4000:4000
#    build:
#      dockerfile: Dockerfile
#      context: ./
    env_file:
      - .env
    environment:
      - DB_HOST=processor_db

## Grid relay service
  grid_relay-service:
    depends_on:
      - processor
    container_name: grid_relay-service
    image: ghcr.io/threefoldtech/rmb-relay:v1.0.3
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.15
    environment:
      - RMB_DOMAIN=relay.bknd1.dev.ava.tf
      - SUBSTRATE_URL=ws://tfchain-public-node:9944
      - USER_PER_WORKER=1000
      - WORKERS=500
    command:
      - "--domain"
      - "relay.bknd1.dev.ava.tf"

## Grid Activation service
  grid_activation_service:
    depends_on:
      - processor
    container_name: grid_activation-service
    image: ghcr.io/threefoldtech/tfchain_activation_service:1.0.2
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.10
    environment:
      - URL=ws://tfchain-public-node:9944
      - MNEMONIC=news mad appear brave weekend first eyebrow blouse mask hedgehog toilet exhaust
      - KYC_PUBLIC_KEY=somekey
      - ACTIVATION_AMOUNT=1000000

## Grid Proxy
  grid_proxy:
    depends_on:
      - grid_activation_service
    container_name: grid_proxy
    image: ghcr.io/threefoldtech/gridproxy:v1.8.0-rc2
    restart: unless-stopped
    privileged: true
    sysctls:
      - net.ipv6.conf.default.disable_ipv6=0
#      - net.ipv6.conf.default.mc_forwarding=1
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.11
    cap_add:
      - NET_ADMIN
    devices:
      - /dev/net/tun:/dev/net/tun
    environment:
      MNEMONICS: "benefit require stamp annual immune sing early face ordinary warrior enough sense"
      EXPLORER: https://graphql.bknd1.dev.ava.tf/graphql
      SUBSTRATE: ws://tfchain-public-node:9944
#      PUBLIC_KEY: 55fe5fbcd51ccb90fd3735c52f3a45478e8fc9ee481f37e255531274e91a5cc2
#      PRIVATE_KEY: 1a277e17de6dceec8563ace830574b96109f52b363cf7d0f161eb939f1dd9f8755fe5fbcd51ccb90fd3735c52f3a45478e8fc9ee481f37e255531274e91a5cc2
