## Grid Dashboard
  grid_dashboard:
    depends_on:
      - grid_proxy
    container_name: grid_dashboard
    image: threefolddev/tfgrid_dashboard:v1.5.0-rc3
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.12
    environment:
      GQL_URL: https://graphql.bknd1.dev.ava.tf/graphql
      VERSION: v1.3.1

## Grid Weblets - Play
  grid_weblets:
    depends_on:
      - grid_dashboard
    container_name: grid_weblets
    image: threefolddev/grid_weblets:8a00561
    restart: unless-stopped
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.13
    environment:
      NETWORK: DEV

## Caddy
  caddy:
    depends_on:
      - grid_weblets
    container_name: caddy
    image: caddy:2.6.2
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    networks:
      tfgrid_bknd:
        ipv4_address: 172.28.0.14
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - /srv/caddy/data:/data
      - /srv/caddy/config:/config
      - /srv/caddy/log:/var/log/caddy
